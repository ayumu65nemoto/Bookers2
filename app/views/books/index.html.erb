<%= render 'userinfo', user: @user %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <div>
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div>
    <label>Opinion</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td>
          <%= image_tag book.user.get_profile_image(100, 100) %><br>
          <%= book.user.name %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      <% end %>
    </tr>
  </tbody>
</table>