<%= render 'books/userinfo', user: @user %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <div>
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div>
    <label>Opinion</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @users.each do |user| %>
        <td><%= image_tag user.get_profile_image(100, 100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      <% end %>
    </tr>
  </tbody>
</table>